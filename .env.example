# AutoCeya 环境变量配置模板
# ===================================
# 复制此文件为 .env 并修改相应的值

# ===================================
# 服务器配置
# ===================================

# 服务器端口
PORT=8998

# 系统登录密钥（请务必修改为强密码！）
# 建议使用至少16位的随机字符串
AUTH_SECRET=your_secure_password_here_change_this

# Node 环境（development 或 production）
NODE_ENV=production

# ===================================
# 测压配置
# ===================================

# 成功率阈值（百分比，低于此值判定为承受不住）
DEFAULT_SUCCESS_THRESHOLD=75

# 最大连续失败次数
DEFAULT_MAX_FAILURES=20

# 响应时间阈值（毫秒，超过此值判定为超时）
# 对于思考模型，可以设置更大的值，如 150000（150秒）
DEFAULT_RESPONSE_TIME_THRESHOLD=250000

# ===================================
# 日志配置
# ===================================

# 日志级别（error, warn, info, debug）
LOG_LEVEL=info

# 是否在控制台输出彩色日志
LOG_COLORIZE=true

# 日志文件保存目录
LOG_DIR=logs

# 日志文件保留天数
LOG_RETENTION_DAYS=1

# ===================================
# 数据库配置
# ===================================

# 数据库文件路径
DB_PATH=./data/autoceya.db

# 是否启用数据库日志
DB_LOGGING=false

# ===================================
# 安全配置
# ===================================

# CORS 允许的源（多个用逗号分隔，* 表示允许所有）
# 生产环境建议设置为具体的域名
CORS_ORIGIN=*

# JWT Token 过期时间（秒）
TOKEN_EXPIRY=86400

# 请求频率限制（每分钟最多请求次数）
RATE_LIMIT_MAX=100

# 请求频率限制时间窗口（分钟）
RATE_LIMIT_WINDOW=1

# ===================================
# AI 模型配置（可选，用于默认值）
# ===================================

# Gemini API 配置
# GEMINI_API_KEY=your_gemini_api_key_here
# GEMINI_BASE_URL=https://generativelanguage.googleapis.com

# OpenAI API 配置
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_BASE_URL=https://api.openai.com

# Claude API 配置
# CLAUDE_API_KEY=your_claude_api_key_here
# CLAUDE_BASE_URL=https://api.anthropic.com

# ===================================
# 其他配置
# ===================================

# WebSocket 心跳间隔（毫秒）
WS_HEARTBEAT_INTERVAL=30000

# WebSocket 心跳超时（毫秒）
WS_HEARTBEAT_TIMEOUT=5000

# 历史记录默认分页大小
DEFAULT_PAGE_SIZE=20

# 历史记录最大保留数量（0表示不限制）
MAX_HISTORY_RECORDS=1000